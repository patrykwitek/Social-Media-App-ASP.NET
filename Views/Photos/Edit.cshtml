@model aplikacja_zdjecia_z_wakacji.Models.PhotoTempForEdit

<h1>Edytowanie zdjęcia</h1>

<br />
<a asp-controller="Photos" asp-action="Statistics" class="btn btn-primary btn-lg">Wróć</a>
<br />

<form asp-controller="Photos" asp-action="Edit" method="Post">
    <br />
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

    <div class="form-group">
        <div>
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>
        <label asp-for="Nazwa">Nazwa: </label>
        <input asp-for="Nazwa" type="text" value=@ViewBag.Nazwa class="form-control" />
    </div>

    <div class="form-group">
        <div>
            <span asp-validation-for="Miejsce" class="text-danger"></span>
        </div>
        <label asp-for="Miejsce">Miejsce: </label>
        <input asp-for="Miejsce" type="text" value=@ViewBag.Miejsce class="form-control" placeholder="Kraj, Miasto" />
    </div>

    <div class="form-group">
        <div>
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>
        <label asp-for="Opis">Opis: </label>
        <input asp-for="Opis" type="text" value=@ViewBag.Opis class="form-control" placeholder="Opis" />
    </div>

    <br/>

    <input asp-for="Id" value=@ViewBag.Id class="form-control" hidden/>

    <button type="submit" class="btn btn-primary btn-lg">Zatwierdź</button>
</form>