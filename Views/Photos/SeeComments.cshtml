@{
}

<h1>Komentarze dotyczące zdjęcia @Model.Nazwa</h1>

<br />
@if (@Model.Comments.Count() == 0)
{
    <h3>Wygląda na to, że nikt jeszcze nie skomentował tego zdjęcia</h3>
    <h3>Napisz coś!</h3>
}
else
{
    <h3>Liczba komentarzy: @Model.Comments.Count()</h3>
}
<br />
<a asp-controller="Photos" asp-action="PagedIndex" class="btn btn-primary btn-lg">Wróć</a>
<br />

<div>
    @for (int i = Model.Comments.Count() - 1; i >= 0; i--)
    {
        <div class="card-body">
            <p class="card-text">
                <small class="text-muted">
                    Dodane przez: @Model.Comments[i].User @Model.Comments[i].Data
                </small>
            </p>
            <p class="card-text">@Model.Comments[i].Tresc</p>
        </div>

        if(i != 0){
            <hr>
        }
    }
</div>