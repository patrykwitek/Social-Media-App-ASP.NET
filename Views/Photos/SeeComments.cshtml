@model List<aplikacja_zdjecia_z_wakacji.Models.Comment>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
}

<h1>Komentarze</h1>

<br />
@if (@Model.Count() == 0)
{
    <h3>Wygląda na to, że nikt jeszcze nie skomentował tego zdjęcia</h3>
    <h3>Napisz coś!</h3>
}
else
{
    <h3>Liczba komentarzy: @Model.Count()</h3>
}
<br />
<a asp-controller="Photos" asp-action="PagedIndex" class="btn btn-primary btn-lg">Wróć</a>
<br />

<div>
    @for (int i = Model.Count() - 1; i >= 0; i--)
    {
        <div class="card-body">
            <p class="card-text">
                <small class="text-muted">
                    Dodane przez: @Model[i].User @Model[i].Data
                </small>
            </p>
            <p class="card-text">@Model[i].Tresc</p>
            <a asp-controller="Photos" asp-action="LikeComment" asp-route-id=@Model[i].Id class="btn btn-outline-primary">Polub @Model[i].Likes.Count()</a>
        </div>

        if(i != 0){
            <hr>
        }
    }
</div>